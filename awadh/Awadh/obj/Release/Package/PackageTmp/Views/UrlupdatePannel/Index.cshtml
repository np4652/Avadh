
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.2.13/ng-file-upload.min.js"></script>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<div ng-app="MyApp" ng-controller="FileUpload">
    <div class="row">
        <div class="col-md-12">
            <img src="~/images/india-top-attractions-varanasi.jpg" style="width:100%; height:300px;">
        </div>

        <div class="col-md-3" style="height:100%">
            <div style="padding-left:75px;background-color:coral">
                <img src="~/Uploads/{{UID}}.jpg" class="img-circle" alt="Cinque Terre" style="width:150px; height:150px; margin-top:-70px"><br>
                <h4 style="padding-left:20px;padding-top:-150px;color:white;font-style:italic;margin-top:0px">{{Name}}</h4>
                <i class="fa fa-home" aria-hidden="true">:{{Address}}</i><br />
                <i class="fa fa-whatsapp" aria-hidden="true" style="color:white;margin-top:-200px;padding-left:40px;">:{{Phone}}</i><br />
                <i class="fa fa-phone" aria-hidden="true" style="color:white;margin-top:-200px;padding-left:40px;">:{{Phone}}</i>
            </div>
            <div style="padding-left:75px;background-color:coral">
                <a href="/UrlupdatePannel/Index" style="color:white">Url Update</a><br>
                <a href="/AllDetailsOfRegistration/Index" style="color:white">Student Details</a><br>
                <a href="/ChangeStatusPannel/Index" style="color:white">Active/DeActive Pannel</a>
            </div>

            <a class="btn btn-success" style="background-color:coral;width:100%" href="@Url.Action("Logout","home")"><i class="fa fa-sign-out" aria-hidden="true">LogOuT</i></a>

        </div>
        <div class="col-md-9">
            <div class="col-md-6" style="padding-left:10%;padding-top:5%;padding-bottom:2% ">
                <div class="container">

                    <div class="panel-group" style="width:30%">
                        <div class="panel panel-primary">
                            <div class="panel-heading">Pdf Upload</div>
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="usr">PDF TITLE:</label>
                                        <input type="text" class="form-control" ng-model="VedioDetails.PDFTITLE">
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label">Upload PDF<span class="required">*:</span></label>
                                        <input type="file" class="form-control" multiple="multiple" ngf-select="UploadFiles($files)" />

                                    </div>
                                </div>
                                <button class="btn btn-info" ng-click="UploadFile()">Upload Pdf Files</button>
                            </div>

                        </div>




                    </div>
                </div>
            </div>
            <div class="col-md-6" style="padding-left:10%;padding-top:5%;padding-bottom:2% ">
                <div class="container">

                    <div class="panel-group" style="width:30%">
                        <div class="panel panel-primary">
                            <div class="panel-heading">Save Vedio Url</div>
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="usr">Vedio Name:</label>
                                        <input type="text" class="form-control" ng-model="VedioDetails.VedioName">
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <label for="usr">Subject:</label>
                                    <select name="cars" class="form-control" ng-model="VedioDetails.Subject">
                                        <option value="">SELECT</option>
                                        <option value="Maths">Maths</option>

                                        <option value="English">English</option>
                                        <option value="Hindi">Hindi</option>
                                        <option value="Science">Science</option>

                                    </select>

                                </div>


                                <div class="col-md-12">
                                    <label for="usr">Class:</label>
                                    <select name="cars" class="form-control" ng-model="VedioDetails.VedioForClass">
                                        <option value="">SELECT</option>
                                        <option value="PreNur">Pre Nursery</option>

                                        <option value="Nursery">Nursery</option>
                                        <option value="KG">KG</option>
                                        <option value="UKG">UKG</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="usr">Vedio Tittle:</label>
                                        <input type="text" class="form-control" ng-model="VedioDetails.VedioTittle">
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="usr">Vedio URL:</label>
                                        <input type="text" class="form-control" ng-model="VedioDetails.VedioUrl">
                                    </div>
                                </div>
                                <button class="btn btn-info" ng-click="submit()">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Content/JS/MyScript/FileUploadJavaScript.js"></script>
