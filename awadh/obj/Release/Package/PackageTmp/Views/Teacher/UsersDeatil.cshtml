
@{
    ViewBag.Title = "Index";
    Layout = "~/views/Shared/_LayoutTeacher.cshtml";
}
@section cardHeader{
    <h4>User Details</h4>
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<div ng-app="MyApp" ng-controller="FileUpload">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group table-responsive">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                        <tr>
                            <th>RegId</th>
                            <th>Name</th>
                            <th>FatherName </th>
                            <th>MotherName </th>
                            <th>Phone </th>
                            <th>Class </th>
                            <th>Dob </th>
                            <th>Password </th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in allrecord">
                            <td>{{ x.RegId }}</td>
                            <td>{{ x.Name }}</td>
                            <td>{{ x.Father_Name }}</td>
                            <td>{{ x.Mother_Name }}</td>
                            <td>{{ x.Phone }}</td>
                            <td>{{ x.Class }}</td>
                            <td>{{ x.DOB }}</td>
                            <td>{{ x.Password }}</td>
                            <td><label for="isact_{{x.RegId}}">{{x.Status}}</label></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.2.13/ng-file-upload.min.js"></script>
    <script src="~/Content/JS/MyScript/FileUploadJavaScript.js"></script>
}