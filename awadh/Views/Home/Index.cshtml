                $('ul.news').find('li:first').slideUp('slow', function () { $(this).remove(); });
                $('ul.news').append(`<li>${_li}</li>`);
            }, 2000);

            $('ul.news').mouseover(() => clearInterval(newsScroll)).mouseout(function () {
                newsScroll = setInterval(() => {
                    let _li = $('ul.news').find('li:first').html();
                    $('ul.news').find('li:first').slideUp('slow', function () { $(this).remove(); });
